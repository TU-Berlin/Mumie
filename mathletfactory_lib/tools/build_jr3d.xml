<project>

	<target name="init"/>
	
	<target name="build.jreality" depends="init">
	
    <javac srcdir="${src.dir}"
           destdir="${class.dir}"
           listfiles="${verbose}"
           deprecation="${javac.deprecation}"
           verbose="${javac.verbose}"
           debug="${javac.debug}"
           includeAntRuntime="yes"
           failonerror="yes"
           source="1.5">
      <classpath refid="compile.classpath"/>
      <exclude name="**/${container.pattern}/**"/>
      <exclude name="**/${graphics2d.pattern}/**"/>
      <exclude name="**/${java3d.pattern}/**"/>
      <exclude name="**/${test.dir.pattern}/**"/>
    </javac>
	
    <copy todir="${class.dir}">
      <fileset dir="${src.dir}" includes="mf-lib_jr3d/**"/>
    </copy>

		<jar destfile="${lib.dir}/${jreality.jar.file}">
      <fileset dir="${class.dir}">
      	<include name="**/${jreality.pattern}/**"/>
      	<include name="mf-lib_jr3d/**"/>
  		</fileset>
    </jar>

    <signjar alias="${signjar.alias}"
             keystore="${signjar.keystore}"
             storepass="${signjar.storepass}">
      <fileset dir="${lib.dir}">
        <include name="${jreality.jar.file}"/>
      </fileset>
    </signjar>
		
	</target>

</project>