<css:style xmlns:css='http://www.mumie.net/xml-namespace/document/content/css_stylesheet'>

<!--
  ================================================================================
  Definitions
  ================================================================================
-->

<!-- Zero space -->
<css:def id="no-space" value="0pt 0pt 0pt 0pt"/>

<!-- Font sizes, absolute: -->
<css:def id="normalsize" value="12pt"/>

<!-- Font sizes, relative: -->
<css:def id="Small-rel" value="75%"/>
<css:def id="small-rel" value="85%"/>
<css:def id="normalsize-rel" value="100%"/>
<css:def id="large-rel" value="125%"/>
<css:def id="Large-rel" value="150%"/>
<css:def id="LARGE-rel" value="200%"/>

<!--
  ================================================================================
  Title
  ================================================================================
-->

<css:rule selector="div.title">
  <css:property name='margin' value="2em 0em 4em 0em"/>
  <css:property name='padding' ref='no-space'/>
</css:rule>

<css:rule selector="div.title h1">
  <css:property name='margin' value="0.25em 0em 0.25em 0em"/>
</css:rule>

<css:rule selector="div.title h1.sub">
  <css:property name='font-size' ref="large-rel"/>
  <css:property name='margin' value="0.5em 0em 0.25em 0em"/>
</css:rule>

<!--
  ================================================================================
  Authors
  ================================================================================
-->

<css:rule selector="div.authors">
  <css:property name='margin' value="1em 0em 1em 0em"/>
  <css:property name='padding' ref='no-space'/>
</css:rule>

<css:rule selector="div.author">
  <css:property name='margin' value="0.1em 0em 0.1em 0em"/>
  <css:property name='padding' ref='no-space'/>
  <css:property name='font-weight' value='bold'/>
</css:rule>

<!--
  ================================================================================
  Version
  ================================================================================
-->

<css:rule selector="div.version">
  <css:property name='margin' value="1em 0em 1em 0em"/>
  <css:property name='padding' ref='no-space'/>
  <css:property name='font-weight' value='bold'/>
</css:rule>

<!--
  ================================================================================
  Table of contents
  ================================================================================
-->

<css:rule selector="div.toc">
  <css:property name='margin' value="2em 0em 2em 0em"/>
  <css:property name='padding' ref='no-space'/>
</css:rule>

<css:rule selector="div.toc ul">
  <css:property name='list-style-type' value="none"/>
  <css:property name='margin' ref='no-space'/>
  <css:property name='padding' ref='no-space'/>
</css:rule>

<css:rule selector="div.toc &gt; ul">
  <css:property name='margin' value="0em 0em 0em 1em"/>
</css:rule>

<css:rule selector="div.toc span.number">
  <css:property name='margin' value="0em 0.1em 0em 0em"/>
  <css:property name='padding' ref='no-space'/>
</css:rule>

<!--
  ================================================================================
  Sections, subsections, etc.
  ================================================================================
-->

<css:rule selector="div.section, div.subsection, div.subsubsection">
  <css:property name='margin' ref='no-space'/>
  <css:property name='padding' ref='no-space'/>
</css:rule>

<css:rule selector="span.section-no, span.subsubsection-no, span.subsubsection-no">
  <css:property name='margin' avlue='0em 0.2em 0em 0em'/>
  <css:property name='padding' ref='no-space'/>
</css:rule>

</css:style>
